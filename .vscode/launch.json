  "version": "0.2.0",
  "configurations": [
    {
      "name": "1-api",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/api/ragflow_server.py",
      "args": [],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "2-task server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/rag/svr/task_executor.py",
      "args": ["0"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "3-current file",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ]
}
